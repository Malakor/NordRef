<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="user_header">
		<% if current_user %>
		Logged in as <%= current_user.firstname %>
		<%= link_to "Log Out", logout_path %>
		<% else %>
		<%= link_to "Log In", login_path %>
		<% end %>
	</div>
<div>
	<% if  current_user && (current_user.role <= 1) %>	
		<%= link_to 'Schiedsrichter', referees_path %>
		<%= link_to 'Vereine', clubs_path %>
	<% end %>
	<% if  current_user && (current_user.role <= 2) %>
		<%= link_to 'Anmeldeliste', registrations_path %>
	<%end %>
	<% if  current_user %>
		<%= link_to 'Kurse', courses_path %>
		<%= link_to 'Lizenzliste', licences_path %>
	<% end %>
</div>
<div>
	<% if current_user && (current_user.role <= 3) %>
		<%= link_to 'Neuen Benutzer anlegen', new_referee_path %>
	<% end %>
	<% if current_user && (current_user.role <= 1) %>
		<%= link_to 'Neuen Verein anlegen', new_club_path %>
		<%= link_to 'Neuen Kurs anlegen', new_course_path %>
		<%= link_to 'Lizenzliste runterladen', 'www.google.de' %>
	<% end %>
</div>

<%= yield %>

</body>
</html>
